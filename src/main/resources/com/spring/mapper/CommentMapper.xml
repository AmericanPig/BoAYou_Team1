<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.mapper.CommentMapper">
    <select id="SelectCommentList" resultType="com.spring.domain.CommentDTO">
        SELECT * FROM comment_tb WHERE community_no = #{community_no}
    </select>      
    <insert id="InsertComment">
        INSERT INTO comment_tb(user_id, community_no, comment_content)
        VALUES(
        #{user_id}
        ,#{community_no}
        ,#{comment_content}          
        )           
    </insert>
    <delete id="DeleteComment">
    	DELETE comment_tb where comment_no = #{comment_no}
    </delete>
</mapper>
